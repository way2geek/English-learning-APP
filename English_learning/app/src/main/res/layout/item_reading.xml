<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:text="TextView"
            android:layout_width="314dp"
            android:layout_height="51dp" android:id="@+id/r_title" android:layout_alignParentStart="true"
            android:layout_marginStart="0dp" android:layout_marginTop="7dp" android:layout_alignParentTop="true"
            android:textSize="18sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="133dp"
            android:layout_height="wrap_content" android:id="@+id/r_time" android:layout_marginBottom="-20dp"
            android:layout_alignBottom="@+id/r_title" android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"/>
    <TextView
            android:text="来源"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="1dp"
            android:layout_below="@+id/r_title" android:layout_toEndOf="@+id/r_time"
            android:layout_marginStart="33dp" android:id="@+id/reading"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/r_src" android:layout_marginBottom="-20dp"
            android:layout_alignBottom="@+id/r_title" android:layout_marginEnd="-73dp"
            android:layout_alignEnd="@+id/reading"/>
</RelativeLayout>