<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        tools:context=".RecordActivity">

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="409dp"
            android:layout_height="666dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/recyclerView2"
            app:layout_constraintTop_toBottomOf="@+id/textView6"/>
    <TextView
            android:text="学习记录"
            android:layout_width="430dp"
            android:layout_height="62dp"
            android:id="@+id/textView6"

            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textSize="30sp" android:gravity="center_horizontal|center_vertical"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.526"
            android:textColor="#FFFFFF"/>
    <Button
            android:text="清除"
            android:layout_width="75dp"
            android:layout_height="49dp"
            android:id="@+id/clear"
            style="@style/roundbutton"
            android:background="@drawable/top_button_shap"
            android:textSize="18sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/textView6" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:backgroundTint="#52FFFFFF" android:textColor="#FFFFFF"/>
</androidx.constraintlayout.widget.ConstraintLayout>